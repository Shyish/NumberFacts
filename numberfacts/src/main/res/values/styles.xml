<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Nfstyle" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.Nfstyle</item>

        <!-- Light.DarkActionBar specific -->
    </style>

    <style name="ActionBar.Solid.Nfstyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_background_textured_nfstyle</item>
        <item name="backgroundSplit">@drawable/ab_background_textured_nfstyle</item>
        <item name="titleTextStyle">@style/NfStyle.ActionBar.TitleTextStyle</item>
    </style>

    <style name="NfStyle.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="default_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_bg_selector</item>
        <item name="android:textColor">@color/button_textcolor_selector</item>
    </style>

    <style name="default_wide_button" parent="default_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">14dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
